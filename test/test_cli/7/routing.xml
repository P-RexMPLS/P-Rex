<routes>
    <routings>
        <routing for="s1">
            <destinations>
                <destination from="i1" label="">

                    <te-groups>

                        <te-group>
                            <routes>

                                <!-- Try and discard first -->
                                <route to="discard">
                                    <actions>
                                    </actions>
                                </route>

                            </routes>
                        </te-group>

                        <te-group>
                            <routes>

                                <route to="s2">
                                    <actions>
                                        <action arg="1000" type="push"/>
                                    </actions>
                                </route>

                            </routes>
                        </te-group>

                    </te-groups>

                </destination>
            </destinations>
        </routing>

        <routing for="s2">
            <destinations>

                <destination from="s1" label="1000">
                    <te-groups>

                        <te-group>
                            <routes>

                                <!-- Try and discard first -->
                                <route to="discard">
                                    <actions>
                                    </actions>
                                </route>

                            </routes>
                        </te-group>

                        <te-group>
                            <routes>

                                <route to="s3">
                                    <actions>
                                        <action arg="1001" type="swap"/>
                                    </actions>
                                </route>

                            </routes>
                        </te-group>

                    </te-groups>
                </destination>

            </destinations>
        </routing>

        <routing for="s3">
            <destinations>

                <destination from="s2" label="1001">
                    <te-groups>

                        <te-group>
                            <routes>

                                <route to="i1">
                                    <actions>
                                        <action type="pop"/>
                                    </actions>
                                </route>

                            </routes>
                        </te-group>

                    </te-groups>
                </destination>

            </destinations>
        </routing>
    </routings>
</routes>
